<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/leagueImageView"
        android:layout_width="@dimen/imageview_size"
        android:layout_height="@dimen/imageview_size"
        android:layout_margin="@dimen/padding_margin_10dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/leagueName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_margin_10dp"
        android:layout_marginEnd="@dimen/padding_margin_10dp"
        android:layout_marginBottom="@dimen/padding_margin_10dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="2"
        tools:text="strLeague(strLeagueAlternate)"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/black"
        android:textSize="@dimen/normal_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/leagueImageView"
        app:layout_constraintTop_toTopOf="@+id/leagueImageView" />

    <TextView
        android:id="@+id/leagueCountry"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_margin_10dp"
        android:layout_marginEnd="@dimen/padding_margin_10dp"
        android:layout_marginBottom="@dimen/padding_margin_10dp"
        android:ellipsize="end"
        android:maxLines="2"
        tools:text="strCountry"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="@dimen/medium_text_size"
        app:layout_constraintTop_toBottomOf="@+id/leagueName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/leagueImageView"
        />
    <TextView
        android:id="@+id/leagueWebsite"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_margin_10dp"
        android:layout_marginEnd="@dimen/padding_margin_10dp"
        android:layout_marginBottom="@dimen/padding_margin_10dp"
        android:maxLines="1"
        tools:text="strWebsite"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="@dimen/medium_text_size"
        app:layout_constraintTop_toBottomOf="@+id/leagueCountry"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/leagueImageView"
        />
    <TextView
        android:id="@+id/leagueDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_marginStart="@dimen/padding_margin_10dp"
        android:layout_marginEnd="@dimen/padding_margin_10dp"
        android:layout_marginBottom="@dimen/padding_margin_10dp"
        android:maxLines="4"
        android:ellipsize="end"
        tools:text="strDescriptionEN"
        android:textSize="@dimen/medium_text_size"
        app:layout_constraintTop_toBottomOf="@+id/leagueWebsite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/leagueImageView"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>